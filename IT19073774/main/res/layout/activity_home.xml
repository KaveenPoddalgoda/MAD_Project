<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="809dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1dp" />

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/design7"
        android:orientation="horizontal" >

    </LinearLayout>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="676dp"
        android:background="@drawable/logo_v3"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:onClick="viewProfile"
        android:layout_marginEnd="20dp"
        android:background="@drawable/profile_avatar"
        android:contentDescription="@string/todo"
        android:elevation="50dp" />

    <ImageView
        android:id="@+id/centerIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/design6"
        android:contentDescription="@string/todo"
        android:elevation="20dp"
        android:onClick="centerCameraView"
        android:src="@drawable/center_icon" />

    <ImageView
        android:id="@+id/centerIcon2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/design6"
        android:contentDescription="@string/todo"
        android:elevation="20dp"
        android:onClick="ItemLog"
        android:src="@drawable/collected_items" />

    <ImageView
        android:id="@+id/centerIcon3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/design6"
        android:contentDescription="@string/todo"
        android:elevation="20dp"
        android:onClick="infoLog"
        android:src="@drawable/rateinfo_btn" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/profile"
        android:text="Ashvinn Kanagar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="inherit"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/UserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserName"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:layout_toStartOf="@+id/profile"
        android:text="Resource Collector" />

    <ImageView
        android:id="@+id/signOut"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="100dp"
        android:layout_toStartOf="@+id/UserName"
        android:background="@drawable/sign_out"
        android:contentDescription="@string/todo"
        android:elevation="20dp"
        android:onClick="sigOutUser" />


</RelativeLayout>