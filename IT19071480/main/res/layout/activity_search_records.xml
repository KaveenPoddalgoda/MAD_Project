<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconSize="35dp"
        app:itemIconTint="@drawable/nav_color"
        app:itemTextColor="@drawable/nav_color"
        app:menu="@menu/bottom_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <View
        android:id="@+id/view3"
        android:layout_width="383dp"
        android:layout_height="67dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo_white" />

    <TextView
        android:id="@+id/EcoClan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/app"
        android:textColor="#27DC2E"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/upMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_down" />

    <View
        android:id="@+id/view4"
        android:layout_width="380dp"
        android:layout_height="570dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/background"
        android:outlineProvider="none"
        android:overScrollMode="ifContentScrolls" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="@string/receive"
        android:textColor="#053A07"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="170dp"
        android:layout_height="33dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:background="#33cc00"
        android:text="@string/received"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="170dp"
        android:layout_height="33dp"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="200dp"
        android:background="#33cc00"
        android:text="@string/requested"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="430dp"
        android:text="@string/payment"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="470dp"
        android:text="@string/weight"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:text="@string/amount"
        android:textColor="#000000"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="500dp"
        android:text="@string/dummyAmount"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="470dp"
        android:text="@string/dummyQuantity"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="185dp"
        android:text="|"
        android:textSize="41sp" />

    <SearchView
        android:layout_width="345dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:background="#FFFFFF"
        android:text="@string/paymentMethod" />

    <TableLayout

        android:layout_width="345dp"
        android:layout_height="147dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="340dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#158403">

            <TextView
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/date"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50px"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:padding="0px"
                android:text="@string/item"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50px"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/quantity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/amountT"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#158403">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyDate"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyItem"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyQuantity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyAmount"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#158403">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyDate"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyItem"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyQuantity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9AF66C"
                android:gravity="center"
                android:text="@string/dummyAmount"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />
        </TableRow>


    </TableLayout>



</RelativeLayout>
